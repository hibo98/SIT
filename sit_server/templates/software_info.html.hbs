{{> main-top title="Software-Info" }}
<div class="software-table">
    <h1>{{software.[0].name}}</h1>
    <p>Publisher: {{software.[0].publisher}}
    <div class="filters">

    </div>
    <table>
        <thead>
            <tr>
                <th>Version</th>
                <th>Anzahl Installationen</th>
            </tr>
        </thead>
        <tbody>
        {{#each software.[1]}}
            <tr>
                <td><a href="/software/version/{{this.id}}">{{this.version}}</a></td>
                <td>{{this.count}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
{{> main-bottom}}